<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="provider" class="com.efimchick.springtutorial.core.it6.springemerged.CustomStringMessageProvider">
        <property name="message" value="Hello Spring!"/>
    </bean>

    <bean id="sender" class="com.efimchick.springtutorial.core.it6.springemerged.OutputFileMessageSender">
        <property name="filename" value="log.log"/>
    </bean>

</beans>